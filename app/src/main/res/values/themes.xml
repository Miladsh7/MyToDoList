<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6273ED</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearanceBold">
        <item name="fontFamily">@font/ybakh_bold</item>
    </style>

    <style name="TextAppearanceRegular">
        <item name="fontFamily">@font/ybakh_regular</item>
    </style>

    <style name="TextAppearanceBold.TitleSplash">
        <item name="android:textSize">@dimen/MyTodolist_textSize_title_splash</item>
        <item name="android:textColor">@color/MyTodolist_title_splash</item>
    </style>

    <style name="TextAppearanceRegular.DescriptionSplash">
        <item name="android:textColor">@color/MyTodolist_title_appName</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_description_splash</item>
    </style>

    <style name="TextAppearanceBold.TextExtButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_extButton_splash</item>
    </style>

    <style name="TextAppearanceBold.TitleHome">
        <item name="android:textSize">@dimen/MyTodolist_textSize_title_home</item>
        <item name="android:textColor">@color/MyTodolist_title_appName</item>
    </style>

    <style name="TextAppearanceRegular.TextHintEdt">
        <item name="android:textSize">@dimen/MyTodolist_textSize_edt_search_home</item>
        <item name="android:textColor">@color/MyTodolist_title_edt_search</item>
    </style>

    <style name="TextAppearanceBold.extButton_home">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_extButton_home</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle">
        <item name="android:textSize">@dimen/MyTodolist_textSize_itemTitle_home</item>
    </style>

    <style name="TextAppearanceRegular.ItemDescription">
        <item name="android:textSize">@dimen/MyTodolist_textSize_itemDescription_home</item>
        <item name="android:textColor">@color/MyTodolist_descItem</item>
    </style>

    <style name="TextAppearanceRegular.ItemDateTime">
        <item name="android:textSize">@dimen/MyTodolist_textSize_itemDate_home</item>
        <item name="android:textColor">@color/MyTodolist_dateItem</item>
    </style>

    <style name="TextAppearanceBold.TitleToolbar">
        <item name="android:textSize">@dimen/MyTodolist_textSize_title_toolbar_detail</item>
        <item name="android:textColor">@color/MyTodolist_titleToolbar_detail</item>
    </style>

    <style name="TextAppearanceRegular.calenderAddNote">
        <item name="android:textSize">@dimen/MyTodolist_textSize_calender_detail</item>
        <item name="android:textColor">@color/MyTodolist_calender</item>
    </style>

    <style name="TextAppearanceRegular.Text_Title_Detail">
        <item name="android:textSize">@dimen/MyTodolist_textSize_text_title_detail</item>
        <item name="android:textColor">@color/MyTodolist_text_title_detail</item>
    </style>

    <style name="TextAppearanceRegular.Text_Edt_Detail">
        <item name="android:textSize">@dimen/MyTodolist_textSize_edt_detail</item>
        <item name="android:textColor">@color/MyTodolist_text_edt_detail</item>
    </style>

    <style name="TextAppearanceBold.extButton_save">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_extButton_save_detail</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle.Blue">
        <item name="android:textColor">@color/MyTodolist_color_blue</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle.Orange">
        <item name="android:textColor">@color/MyTodolist_color_orange</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle.Red">
        <item name="android:textColor">@color/MyTodolist_color_red</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle.Green">
        <item name="android:textColor">@color/MyTodolist_color_green</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle.Pink">
        <item name="android:textColor">@color/MyTodolist_color_pink</item>
    </style>

    <style name="TextAppearanceBold.ItemTitle.Purple">
        <item name="android:textColor">@color/MyTodolist_color_purple</item>
    </style>

    <style name="TextAppearanceRegular.TxtTitle_delete">
        <item name="android:textColor">@color/MyTodolist_title_delete</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_title_delete</item>
    </style>

    <style name="TextAppearanceBold.extButton_positiveButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_extButton_delete</item>
    </style>

    <style name="TextAppearanceBold.extButton_negativeButton">
        <item name="android:textColor">@color/MyTodolist_extButton_negative</item>
        <item name="android:textSize">@dimen/MyTodolist_textSize_extButton_delete</item>
    </style>

    <style name="customAlertDialogThemOverly" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
    </style>

</resources>